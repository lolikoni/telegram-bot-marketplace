# ========================================
# N8N Configuration
# ========================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Database
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./n8n.db

# Webhook URL (will be set automatically when using tunnel)
WEBHOOK_URL=

# Security
N8N_ENCRYPTION_KEY=demo-encryption-key-for-testing-purposes-only

# Logging
N8N_LOG_LEVEL=info

# Port
N8N_PORT=5679

# Host
N8N_HOST=localhost

# ========================================
# Telegram Bot Configuration
# ========================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=demo_telegram_bot_token_for_testing
TELEGRAM_BOT_USERNAME=demo_bot_username

# ========================================
# Payment System Configuration
# ========================================
# Stripe (Alternative payment method)
STRIPE_SECRET_KEY=sk_test_demo_stripe_secret_key_for_testing
STRIPE_PUBLISHABLE_KEY=pk_test_demo_stripe_publishable_key_for_testing
STRIPE_WEBHOOK_SECRET=whsec_demo_stripe_webhook_secret_for_testing

# Telegram Payments (if available in your region)
TELEGRAM_PAYMENT_TOKEN=demo_telegram_payment_token_for_testing

# ========================================
# AI Services Configuration
# ========================================
# OpenAI API for text generation
OPENAI_API_KEY=sk-demo-openai-api-key-for-testing-purposes
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Replicate API for image generation
REPLICATE_API_TOKEN=r8_demo_replicate_api_token_for_testing

# Stability AI (alternative for image generation)
STABILITY_API_KEY=demo_stability_api_key_for_testing

# ========================================
# Database Configuration
# ========================================
# PostgreSQL (for production)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n_telegram_bot
# DB_POSTGRESDB_USER=n8n_user
# DB_POSTGRESDB_PASSWORD=your_db_password_here

# SQLite (for development)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./n8n.db

# ========================================
# File Storage Configuration
# ========================================
# Local storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# AWS S3 (for production)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=demo_aws_access_key_for_testing
# AWS_SECRET_ACCESS_KEY=demo_aws_secret_key_for_testing
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=demo-s3-bucket-for-testing

# ========================================
# Security & Fraud Protection
# ========================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Fraud detection
FRAUD_CHECK_ENABLED=true
FRAUD_MAX_REQUESTS_PER_DAY=100
FRAUD_SUSPICIOUS_IPS=192.168.1.1,10.0.0.1

# ========================================
# Monitoring & Analytics
# ========================================
# Sentry for error tracking
SENTRY_DSN=demo_sentry_dsn_for_testing

# Google Analytics
GOOGLE_ANALYTICS_ID=demo_ga_id_for_testing

# ========================================
# Business Logic Configuration
# ========================================
# Pricing
PRICE_PER_PRODUCT_CARD=5.00
PRICE_PER_IMAGE_GENERATION=2.00
PRICE_PER_TEXT_GENERATION=1.00

# Limits
MAX_IMAGES_PER_REQUEST=5
MAX_TEXT_LENGTH=1000
MAX_PRODUCT_CARDS_PER_DAY=10

# Timeouts
REQUEST_TIMEOUT=30000
AI_GENERATION_TIMEOUT=120000

# ========================================
# Notification Configuration
# ========================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=demo_email@gmail.com
SMTP_PASS=demo_email_password_for_testing

# Admin notifications
ADMIN_TELEGRAM_CHAT_ID=demo_admin_chat_id_for_testing
SUPPORT_EMAIL=support@demo.com

# ========================================
# Development Configuration
# ========================================
# Enable tunnel for webhook testing
N8N_TUNNEL=true

# Debug mode
N8N_LOG_LEVEL=debug

# Development webhook URL (will be set by tunnel)
WEBHOOK_TUNNEL_URL=
