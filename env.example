# N8N Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Database
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./n8n.db

# Webhook URL (will be set automatically when using tunnel)
WEBHOOK_URL=

# Security
N8N_ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Logging
N8N_LOG_LEVEL=info

# Port
N8N_PORT=5678

# Host
N8N_HOST=localhost

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Webhook URL (автоматически устанавливается при использовании туннеля)
TELEGRAM_WEBHOOK_URL=

# ========================================
# PAYMENT SYSTEM CONFIGURATION
# ========================================

# Telegram Payments Provider Token
PAYMENT_PROVIDER_TOKEN=your_payment_provider_token

# Payment Webhook Secret
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret

# Stripe Configuration (альтернативная платежная система)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ========================================
# AI SERVICES CONFIGURATION
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Replicate Configuration (для генерации изображений)
REPLICATE_API_TOKEN=your_replicate_api_key

# Stability AI Configuration
STABILITY_API_KEY=your_stability_api_key

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL (рекомендуется для продакшена)
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_bot_db

# SQLite (для разработки)
SQLITE_DATABASE_PATH=./data/telegram_bot.db

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================

# Local Storage Path
LOCAL_STORAGE_PATH=./uploads

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ========================================
# SECURITY & FRAUD PROTECTION
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Fraud Protection
FRAUD_DETECTION_ENABLED=true
MAX_REQUESTS_PER_HOUR=50
SUSPICIOUS_IP_BLACKLIST=

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Sentry (для мониторинга ошибок)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# ========================================
# BUSINESS LOGIC CONFIGURATION
# ========================================

# Pricing Configuration
BASIC_PLAN_PRICE=500
PREMIUM_PLAN_PRICE=1500
ENTERPRISE_PLAN_PRICE=5000

# Content Generation Limits
MAX_IMAGES_PER_REQUEST=5
MAX_DESCRIPTIONS_PER_REQUEST=3
MAX_COLOR_SCHEMES_PER_REQUEST=2

# Processing Timeouts
IMAGE_PROCESSING_TIMEOUT=300000
CONTENT_GENERATION_TIMEOUT=60000
PAYMENT_PROCESSING_TIMEOUT=30000

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Telegram Notifications
ADMIN_TELEGRAM_ID=your_admin_telegram_id
SUPPORT_TELEGRAM_ID=your_support_telegram_id 